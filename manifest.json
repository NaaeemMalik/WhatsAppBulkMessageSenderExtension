{
  "manifest_version": 3,
  "name": "WhatsAppBulk Message Free",
  "description": "WhatsApp Bulk Message Sender Extension",
  "version": "1.0",

  "action": {
    "default_icon": "logo128.png",
    "default_title": "WhatsApp Bulk Message Sender",
    "default_popup": "index.html"
  },
  "icons": {
    "128": "logo128.png"
  },
  "homepage_url": "https://softwareprince.com/?src=whatsapp-bulk-message-sender&page=manifest",
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/",
        "https://web.whatsapp.com/send?phone=*"
      ],
      "js": ["wa.js"]
    }
  ],
  "background": {
    "service_worker": "bg.js"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://web.whatsapp.com/*"]
}
